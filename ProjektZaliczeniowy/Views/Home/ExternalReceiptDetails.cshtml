@model ProjektZaliczeniowy.Models.Entities.ExternalReceipt

@{
    ViewData["Title"] = "Szczegóły wydania zewnętrsznego";
}

<div class="container mt-5">
    <h1>Szczegóły wydania zewnętrznego nr @Model.Id</h1>
    <p>Data wydania: @Model.Date.ToString("yyyy-MM-dd HH:mm")</p>
    <p>Wprowadzający: @Model.User.Username</p>
    <p>Uwagi: @Model.Remarks</p>
    <hr />
    <h3>Produkty</h3>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Nazwa produktu</th>
                <th>Ilość</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var detail in Model.Details)
            {
                <tr>
                    <td>@detail.Product.Name</td>
                    <td>@detail.Quantity</td>
                </tr>
            }
        </tbody>
    </table>
</div>
